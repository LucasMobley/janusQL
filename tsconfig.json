{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
    ],
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true
  }
}